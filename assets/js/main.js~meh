
var app = angular.module('myApp', []);

app.controller('myCtrl', function($scope, $http) {
	$scope.preferences = ["I", "N", "T", "J"];
	$scope.functions = ["Ni", "Se", "Te", "Fi"];
	$scope.functionOrder = ["Ni", "Te", "Fi", "Se"];

	$http.get("assets/data.json",
		{
			cache: false,
			headers: {
				'Cache-Control': 'no-cache',
				'Pragma':'no-cache'
			}
		}
	).then(function(response) {
		console.log(response);
		$scope.data = response.data;
	});


});

var preferences = {
	"i-e": "i"
	"s-n": "n",
	"t-f": "t",
	"j-p": "j"
}

// ======================================
// Tests
// ======================================

function makeSelection(selection) {
	if(selection.length == 1) {
		makePreferenceSelection(selection);
	} else if(selection.length == 2) {
		makeFunctionSelection(selection);
	} else {
		console.log("ERROR: Invalid selection");
	}
	return;
}

function makePreferenceSelection(selection) {
	switch(selection) {
		case "I":
			/*
			remove e, add i
			*/
			break;
		case "E":
			/*
			remove i, add e
			*/
			break;
		case "S":
			/*
			remove n, add s
			*/
			break;
		case "N":
			/*
			remove s, add n
			*/
			break;
		case "T":
			/*
			remove f, add t
			*/
			break;
		case "F":
			/*
			remove t, add f
			*/
			break;
		case "J":
			/*
			remove p, add j
			*/
			break;
		case "P":
			/*
			remove j, add p
			*/
			break;
		default:
			console.log("ERROR: Invalid selection");
	}

	return;
}

